    # Puerto en el que correrá el servidor (por defecto 3000)
PORT=3000

# Entorno de ejecución (development | production)
NODE_ENV=development

# Token del bot de Discord (obtener desde Discord Developer Portal)
# Se usa para obtener avatares de usuarios del servidor
# Opcional: si no se configura, se usarán avatares por defecto
DISCORD_BOT_TOKEN=tu_token_de_discord_aqui
